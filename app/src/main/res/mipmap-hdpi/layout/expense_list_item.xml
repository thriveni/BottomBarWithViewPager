<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_expense_row"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:weightSum="100"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_expense"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="30"
                android:src="@mipmap/road1" />
            <ImageView
                android:id="@+id/img_expense2"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="40"
                android:src="@mipmap/avatar_slide" />

            <ImageView
                android:id="@+id/img_expense3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:src="@mipmap/road1" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:background="#FFFFFF"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="@dimen/dp_2"
                        android:text="Rs" />

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:id="@+id/tv_expense_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:gravity="left"
                        android:text="5000" />

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:id="@+id/tv_expense_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:gravity="right"
                        android:text="5000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:id="@+id/tv_expense_ltr_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:padding="@dimen/dp_2"
                        android:text="24.6" />

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="Ltr @Rs" />

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:id="@+id/tv_expense_per_ltr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="70" />

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="/Ltr" />

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="40"
                        android:gravity="right"
                        android:text="Odometer :" />

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:id="@+id/tv_expense_odometer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="20"
                        android:gravity="left"
                        android:text="50000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:id="@+id/lay_one"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="@dimen/dp_2"
                        android:text="Rs" />

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:id="@+id/tv_expense_amount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:gravity="left"
                        android:text="5000" />

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:id="@+id/tv_expense_date3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:gravity="right"
                        android:text="5000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lay_two"
                    android:animateLayoutChanges="true"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:padding="@dimen/dp_2"
                        android:text="Rs" />

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:id="@+id/tv_expense_amount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:gravity="left"
                        android:text="5000" />

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:id="@+id/tv_expense_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:gravity="right"
                        android:text="5000" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>