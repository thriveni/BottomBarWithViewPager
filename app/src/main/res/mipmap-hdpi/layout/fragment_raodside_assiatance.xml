<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ccF5FFFA"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:orientation="vertical">

        <in.intellicar.android.connectedvehicle.utilities.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="fonts/Roboto-Light_1.ttf"
            android:gravity="left"
            android:padding="@dimen/dp_5"
            android:text="Emergency"
            android:textColor="#b22222"
            android:textSize="@dimen/sp_15" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="100">

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="98"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="Emergency Services" />

                    <ImageView
                        android:id="@+id/img_emergency_emergency"
                        android:layout_width="30dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_height="30dp"
                        android:src="@mipmap/img_call"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_gravity="bottom"
                    android:background="#dcdcdc" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="100">

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="98"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="Ambulance" />

                    <ImageView
                        android:id="@+id/img_ambulance_emrgency"
                        android:layout_width="30dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_height="30dp"
                        android:src="@mipmap/img_call"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_gravity="bottom"
                    android:background="#dcdcdc" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="100">

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="98"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="Breakdown Services" />

                    <ImageView
                        android:id="@+id/img_brakdown_emergency"
                        android:layout_width="30dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_height="30dp"
                        android:src="@mipmap/img_call"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <in.intellicar.android.connectedvehicle.utilities.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="fonts/Roboto-Light_1.ttf"
            android:gravity="left"
            android:padding="@dimen/dp_5"
            android:text="Service Centers"
            android:textColor="#b22222"
            android:textSize="@dimen/sp_15" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="100">


                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="98"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="Star Services" />

                    <ImageView
                        android:id="@+id/img_star_service_center"
                        android:layout_width="30dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_height="30dp"
                        android:src="@mipmap/img_call"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_gravity="bottom"
                    android:background="#dcdcdc" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="100">


                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="98"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="Moon Services" />

                    <ImageView
                        android:id="@+id/img_moon_service_center"
                        android:layout_width="30dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_height="30dp"
                        android:src="@mipmap/img_call"
                        />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <in.intellicar.android.connectedvehicle.utilities.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="fonts/Roboto-Light_1.ttf"
            android:gravity="left"
            android:padding="@dimen/dp_5"
            android:text="People"
            android:textColor="#b22222"
            android:textSize="@dimen/sp_15" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="100">


                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="98"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="Service Advicers(Start Service)" />

                    <ImageView
                        android:id="@+id/img_ppl_star_service"
                        android:layout_width="30dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_height="30dp"
                        android:src="@mipmap/img_call"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_gravity="bottom"
                    android:background="#dcdcdc" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="100">


                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="98"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="Technitian(Star Services)" />

                    <ImageView
                        android:id="@+id/img_ppl_tech_service"
                        android:layout_width="30dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_height="30dp"
                        android:src="@mipmap/img_call"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_gravity="bottom"
                    android:background="#dcdcdc" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="100">

                    <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="98"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="Serive Adviser(Moon Services)" />

                    <ImageView
                        android:id="@+id/img_ppl_moon_service"
                        android:layout_width="30dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_height="30dp"
                        android:src="@mipmap/img_call"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>