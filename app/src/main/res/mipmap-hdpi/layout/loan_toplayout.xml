<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="100">

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:padding="@dimen/dp_2"
                    android:text="Loan Account Number" />

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:id="@+id/tv_loan_account_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="50"
                    android:gravity="right"
                    android:text="LxB 11-200883df" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="bottom"
                android:background="#dcdcdc" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="100">

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:padding="@dimen/dp_2"
                    android:text="Loan Amount" />

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="right"
                    android:text="Rs"

                    />

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:id="@+id/tv_loan_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="25"
                    android:gravity="left"
                    android:padding="@dimen/dp_2"
                    android:text="50000" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="bottom"
                android:background="#dcdcdc" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="100">

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:padding="@dimen/dp_2"
                    android:text="Intrest Rate" />


                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:id="@+id/tv_loan_interest_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="25"
                    android:gravity="right"
                    android:padding="@dimen/dp_2"
                    android:text="7.8" />

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="left"
                    android:text="%"

                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="bottom"
                android:background="#dcdcdc" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="100">

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:padding="@dimen/dp_2"
                    android:text="EMI" />

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="right"
                    android:text="Rs"

                    />

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:id="@+id/tv_emi_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="25"
                    android:gravity="left"
                    android:padding="@dimen/dp_2"
                    android:text="50000" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="bottom"
                android:background="#dcdcdc" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="100">

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:padding="@dimen/dp_2"
                    android:text="Principal Re-Paid" />

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="right"
                    android:text="Rs"

                    />

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:id="@+id/tv_loan_principal_repaid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="25"
                    android:gravity="left"
                    android:padding="@dimen/dp_2"
                    android:text="534534" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="bottom"
                android:background="#dcdcdc" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="100">

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:padding="@dimen/dp_2"
                    android:text="Interest Paid" />

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="right"
                    android:text="Rs"

                    />

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:id="@+id/tv_loan_interest_repaid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="25"
                    android:gravity="left"
                    android:padding="@dimen/dp_2"
                    android:text="23423" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="bottom"
                android:background="#dcdcdc" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="100">

                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:padding="@dimen/dp_2"
                    android:text="Number of Installments Remaining" />


                <in.intellicar.android.connectedvehicle.utilities.CustomTextView
                    android:id="@+id/tv_loan_remaining_installment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="35"
                    android:gravity="left"
                    android:padding="@dimen/dp_2"
                    android:text="534534" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>